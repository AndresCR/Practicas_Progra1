public static void main(String[] args) {
        int A;
        int B;
        int C;
        int D;
        int toma_valor;
        
        Scanner teclado = new Scanner(System.in);
        
        System.out.println("Digite un valor para A"+"\n");
        A=Integer.parseInt(teclado.nextLine());
        System.out.println("Digite un valor para B"+"\n");
        B=Integer.parseInt(teclado.nextLine());
        System.out.println("Digite un valor para C"+"\n");
        C=Integer.parseInt(teclado.nextLine());
        System.out.println("Digite un valor para D"+"\n");
        D=Integer.parseInt(teclado.nextLine());
        toma_valor=A;
        A=B;
        B=C;
        C=D;
        System.out.println("El valor de A es"+toma_valor+"\n");
        System.out.println("El valor de B es"+A+"\n");
        System.out.println("El valor de C es"+B+"\n");
        System.out.println("El valor de D es"+C+"\n");
